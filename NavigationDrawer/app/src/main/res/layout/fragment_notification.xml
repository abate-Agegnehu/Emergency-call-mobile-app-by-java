<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686D76"
    tools:context=".Notification">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:backgroundTint="#EEEEEE"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_thank_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Call Notification"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_emergency_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Type"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_emergency_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Details"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
